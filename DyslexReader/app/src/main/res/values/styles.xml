<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_light</item>
        <item name="colorAccent">@color/colorAccent_light</item>
        <item name="android:background">@color/colorBackground_light</item>

        <item name="android:textColorPrimary">@color/colorTextPrimary_light</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary_light</item>

        <item name="TextViewBackAttributeColor">@color/colorTextView_light</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_dark</item>
        <item name="colorAccent">@color/colorAccent_dark</item>
        <item name="android:background">@color/colorBackground_dark</item>

        <item name="android:textColorPrimary">@color/colorTextPrimary_dark</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary_dark</item>

        <item name="TextViewBackAttributeColor">@color/colorTextView_dark</item>
        
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>


</resources>
